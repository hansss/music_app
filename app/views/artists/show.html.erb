<p id="notice"><%= notice %></p>
<div id = "artist_info"

  <div id = "cover_image">
    <%= image_tag @artist.cover_image.url %>
  </div>
  <div id = "profile_image">
    <%= image_tag @artist.profile_image.url %>
  </div>
  <div id ="name">
    <b>Name:</b> <%= @artist.name %>
  </div>

  <div id = "city">
    <b>City:</b> <%= @artist.city %>
  </div>
  <% if can? :edit, @artist %>
  <div id="edit_profile_page">
    <%= link_to 'Edit', edit_artist_path(@artist) %> 
  </div>
  <% end %>
</div>

<div class = "songs_group">
  <div id="song_header">Songs</div></br>
  <% if can? :manage, @artist %>
    <%= link_to "Add a new song", new_song_path %>
  <% end %>
  

  <% @artist.songs.each do |song| %>
    <div class = "song">
    <div id = "song_name"><%= song.name %></div></br>
    <%= link_to "Add a comment", new_song_comment_path(song) %>
    <% song.comments.each do |comment| %>
        <li id="comments">       
          <%=verify_if_comment_has_a_registered_author(comment)%>: 
          <%= comment.content %>
          <%if can? :manage, comment || @current_artist %>
            <%= link_to 'Edit', edit_song_comment_path(song,comment) %>
          <% end %>
          <% if can? :destroy, comment %>
            <%= link_to 'Delete', song_comment_path(song, comment), method: :delete %>
          <%end%>
        </li>
    <% end %>
  </div>
  <% end %>
</div>



